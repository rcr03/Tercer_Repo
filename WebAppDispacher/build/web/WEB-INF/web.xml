<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Servlet1</servlet-name>
        <servlet-class>mrysi.servlets.Servlet1</servlet-class>
        <init-param>
            <param-name>path</param-name>
            <param-value>/recursos/info/</param-value>
        </init-param>
        <init-param>
            <param-name>dimension</param-name>
            <param-value>30</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Servlet2</servlet-name>
        <servlet-class>mrysi.servlets.Servlet2</servlet-class>
        <init-param>
            <param-name>emailDefault</param-name>
            <param-value>regina.castillo@rodri.edu.mx</param-value>
        </init-param>
        <init-param>
            <param-name>param2</param-name>
            <param-value>34</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Servlet3</servlet-name>
        <servlet-class>mrysi.servlets.Servlet3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet1</servlet-name>
        <url-pattern>/Servlet1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet2</servlet-name>
        <url-pattern>/Servlet2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Servlet3</servlet-name>
        <url-pattern>/Servlet3</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <context-param>
        <param-name>parametroContexto</param-name>
        <param-value>"valorParametro"</param-value>
    </context-param>
</web-app>
